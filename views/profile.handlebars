<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class='row mt-4'>
  <div class='wrapper col-6 col-md-3 m-3'>
    <div class='row justify-space-between-md'>
      <div class='create-card'>
        <h2 class='page-title'>Create New Project</h2>
        <form class='form login-form'>
          <div class='form-group'>
            <label for='project-name'>Project name:</label>
            <input class='form-input' type='text' id='project-name' />
          </div>
          <div class='form-group'>
            <label for='description'>Description:</label>
            <input class='form-input' type='text' id='description' />
          </div>
          <div class='form-group'>
            <label for='needed-funding'>Funding needed:</label>
            <input class='form-input' type='text' id='needed-funding' />
          </div>
          <div class='form-group'>
            <button class='btn btn-primary' type='submit'>Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  {{#if projects.length}}
    <div class='col-md-9 project-list'>
      <h3>Current Projects:</h3>

      {{#each projects as |project|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/project/{{project.id}}'>{{project.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{project.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>